root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
charset = utf-8
insert_final_newline = true

[*.{txt,md}]
indent_size = 2

[*.xsd]
indent_style = tab

[*.csproj]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{diff,patch}]
trim_trailing_whitespace = unset
charset = unset
indent_style = unset
indent_size = unset
